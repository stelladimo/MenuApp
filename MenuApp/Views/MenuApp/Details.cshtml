@model MenuApp.Models.Dish
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <h3>@Model.Name</h3>
    </div>
    <div class="d-flex justify-content-center">
       <img src="@Model.ImageUrl" style="width:70%" />
    </div>
    <div class="d-flex justify-content-center">
        <h3>@Model.Price.ToString("N2") Dollars</h3>
    </div>
    <div class="d-flex justify-content-center">
        <h3>Ingredinets:</h3>
        <ul>
            @foreach (var item in Model.DishIngredients)
            {
                <li>
                    @item.Ingredient.Name
                </li>
            }
        </ul>
    </div>
    <a class="btn btn-info" asp-action="Index">Back to the Menu</a>
</div>
